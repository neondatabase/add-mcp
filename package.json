{
  "name": "add-mcp",
  "version": "0.7.3",
  "description": "Add MCP servers to your favorite coding agents with a single command.",
  "author": "Andre Landgraf <andre@neon.tech>",
  "license": "Apache-2.0",
  "type": "module",
  "bin": {
    "add-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "fmt": "prettier --write .",
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsx src/index.ts",
    "test": "tsx tests/source-parser.test.ts && tsx tests/agents.test.ts && tsx tests/mcp-lock.test.ts && tsx tests/installer.test.ts && tsx tests/e2e/install.test.ts",
    "test:unit": "tsx tests/source-parser.test.ts && tsx tests/agents.test.ts && tsx tests/mcp-lock.test.ts && tsx tests/installer.test.ts",
    "test:e2e": "tsx tests/e2e/install.test.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "mcp",
    "model-context-protocol",
    "ai-agents",
    "claude-code",
    "claude-desktop",
    "codex",
    "cursor",
    "gemini-cli",
    "goose",
    "opencode",
    "vscode",
    "zed"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neondatabase/add-mcp.git"
  },
  "homepage": "https://github.com/neondatabase/add-mcp#readme",
  "bugs": {
    "url": "https://github.com/neondatabase/add-mcp/issues"
  },
  "dependencies": {
    "@clack/prompts": "^0.9.1",
    "@iarna/toml": "^2.2.5",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "js-yaml": "^4.1.0",
    "jsonc-parser": "^3.3.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.0",
    "prettier": "^3.8.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18"
  }
}
